{
  "name": "typescript-lib-starter",
  "version": "0.0.1",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "files": [
    "dist/",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=16"
  },
  "license": "UNLICENSED",
  "scripts": {
    "commit": "cz",
    "build": "run-p build:*",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "build:module": "tsc -p tsconfig.json ",
    "fix": "run-p fix:*",
    "fix:lint": "eslint src --ext .ts --fix",
    "fix:prettier": "yarn prettier . --write",
    "test": "run-p test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "yarn prettier . --check",
    "test:unit": "jest",
    "test:spelling": "cspell \"{README.md,src/**/*.ts}\"",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --watch",
    "release": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && yarn",
    "prepare-release": "run-s reset-hard test version"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "commitizen": "4.2.4",
    "cspell": "^5.16.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.7.0",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "eslint-config-prettier": "^8.3.0",
    "standard-version": "^9.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
